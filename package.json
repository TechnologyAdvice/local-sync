{
  "name": "local-sync",
  "version": "2.0.0",
  "description": "A friendly, tiny, synchronous, namespaced, and dependency free local storage solution.",
  "keywords": [
    "local",
    "storage",
    "browser",
    "synchronous"
  ],
  "main": "./dist/local-sync.js",
  "scripts": {
    "start": "npm run build:watch & live-server",
    "test": "echo \"Error: no test specified\" && exit 0",
    "clean:dist": "rm -rf dist",
    "lint": "eslint .",
    "lint:watch": "npm run watch -- 'npm run lint --silent'",
    "lint:fix": "npm run lint -- --fix",
    "prepublish": "cross-env NODE_ENV=production npm run build:production",
    "prerelease:major": "npm run lint && npm test",
    "release:major": "ta-script npm/release major",
    "prerelease:minor": "npm run lint && npm test",
    "release:minor": "ta-script npm/release minor",
    "prerelease:patch": "npm run lint && npm test",
    "release:patch": "ta-script npm/release patch",
    "watch": "cross-env DEBUG=watch babel-node scripts/watch.js",
    "webpack": "webpack --config webpack.config.babel.js",
    "prebuild": "npm run clean:dist",
    "build": "npm run webpack && npm run build:production && npm run build:docs",
    "build:docs": "jsdoc2md --template README.hbs src/**/*.js > README.md && doctoc README.md --github --maxlevel 4",
    "build:watch": "npm run watch -- 'npm run build'",
    "build:production": "npm run webpack -- -p --output-filename local-sync.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TechnologyAdvice/local-sync.git"
  },
  "author": "TechnologyAdvice <devteam@technologyadvice.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TechnologyAdvice/local-sync/issues"
  },
  "homepage": "https://github.com/TechnologyAdvice/local-sync#readme",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "cross-env": "^2.0.1",
    "debug": "^2.2.0",
    "doctoc": "^1.2.0",
    "eslint-config-ta": "^3.2.1",
    "jsdoc-to-markdown": "^1.3.2",
    "live-server": "^0.9.0",
    "ta-scripts": "^2.4.3",
    "watch": "^0.17.1",
    "webpack": "^1.12.9"
  }
}
